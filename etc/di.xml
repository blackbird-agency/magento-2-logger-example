<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Blackbird\Logger\Logger\Channel\Monolog" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">logger</argument>
            <argument name="handlers"  xsi:type="array">
                <!--emergency--><item name="warning" xsi:type="object">Blackbird\Logger\Logger\Handler\Base</item>
                <!--alert--><item name="warning" xsi:type="object">Blackbird\Logger\Logger\Handler\Base</item>
                <!--critical--><item name="warning" xsi:type="object">Blackbird\Logger\Logger\Handler\Base</item>
                <!--error--><item name="warning" xsi:type="object">Blackbird\Logger\Logger\Handler\Base</item>
                <!--warning--><item name="warning" xsi:type="object">Blackbird\Logger\Logger\Handler\Base</item>
                <!--notice--><item name="notice" xsi:type="object">Blackbird\Logger\Logger\Handler\Base</item>
                <!--info--><item name="system" xsi:type="object">Blackbird\Logger\Logger\Handler\System</item>
                <!--debug--><item name="debug" xsi:type="object">Blackbird\Logger\Logger\Handler\Debug</item>
            </argument>
        </arguments>
    </virtualType>
</config>